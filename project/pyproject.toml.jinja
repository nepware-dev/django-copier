[tool.poetry]
name = "{{ project_name }}"
version = "0.1.0"
description = ""
authors = []

[tool.poetry.dependencies]
python = "^3.11"
Django = "^3.2.16"
environs = {version = "^9.5.0", extras = ["django"]}
marshmallow = "^3.19.0"
uvicorn = { version = "^0.20.0", optional = true, extras = ["standard"] }
gunicorn = { version = "^20.1.0", optional = true }
celery = { version = "^5.2.7", extras = ["redis"] }
